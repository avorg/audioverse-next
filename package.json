{
  "name": "audioverse-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "eslint --max-warnings 0 --ext .ts --ext .tsx --ext .js --ext .jsx src/",
    "lint:fix": "eslint --fix --ext .ts --ext .tsx --ext .js --ext .jsx src/",
    "start": "next start",
    "test": "jest",
    "extract": "formatjs extract -- 'src/**/*.tsx' --out-file public/lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "format": "prettier --write \"src/**/*.tsx\""
  },
  "dependencies": {
    "@types/lodash": "^4.14.161",
    "full-icu": "^1.3.1",
    "lodash": "^4.17.20",
    "next": "^9.5.3",
    "next-pwa": "^3.1.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "16.13.1",
    "react-intl": "^5.8.3",
    "sass": "^1.26.10"
  },
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@formatjs/cli": "^2.12.0",
    "@formatjs/ts-transformer": "^2.11.0",
    "@testing-library/dom": "^7.24.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@testing-library/user-event": "^12.1.3",
    "@types/react": "^16.9.49",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.3.0",
    "babel-plugin-react-intl": "^8.2.4",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-formatjs": "^2.7.12",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "@lib/(.*)": "<rootDir>/src/lib/$1",
      "@components/(.*)": "<rootDir>/src/components/$1",
      "@containers/(.*)": "<rootDir>/src/containers/$1",
      "@pages/(.*)": "<rootDir>/src/pages/$1"
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json",
        "astTransformers": {
          "before": [
            {
              "path": "@formatjs/ts-transformer/ts-jest-integration",
              "options": {
                "overrideIdFn": "[sha512:contenthash:base64:6]",
                "ast": true
              }
            }
          ]
        }
      }
    }
  }
}